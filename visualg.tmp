algoritmo "GolsPartidaFutebol"
var
   Time1, Time2: Caractere
   N1, N2, Dif: Inteiro
inicio
      Escreva("Digite o nome do primeiro time: ")
      Leia (Time1)
      Escreva("Digite o nome do segundo time: ")
      Leia (Time2)
      Escreva("Quantos gols o  ", Time1, " fez? ")
      Leia (N1)
      Escreva("Quantos gols o ", Time2, " fez? ")
      Leia (N2)
      Se(N1 > N2) entao
            dif <- N1 - N2
      senao
            dif <- N2 - N1
      FimSe
      EscrevaL("------------------------------")
      EscrevaL("DIFERENÇA: ", dif, " GOLS")
      Escolha dif
              Caso 0
              Escreval("A PARTIDA TERMINOU EMPATADA")
              Caso 1, 2, 3
              Escreval("A PARTIDA TERMINOU COM UMA DIFERENÇA NORMAL DE GOLS")
              Caso 4, 5, 6, 7
              Escreval("A PARTIDA TERMINOU COM UMA GOLEADA")
              OutroCaso
              Escreval("A PARTIDA TEVE UMA DIFERENÇA MAIOR QUE 8 GOLS ENTRE OS TIMES")
              EscrevaL("                           OU                               ")
              Escreval("VERIFIQUE SE VOCÊ DIGITOU CORRETAMENTE O NUMERO DE GOLS")
      FimEscolha
      
fimalgoritmo
