algoritmo "AnalisadorStrings"

var
   N: Caractere
   C: Inteiro
inicio
      Escreva("Digite seu nome: ")
      Leia(N)
      EscrevaL("Total de letras do seu nome é:", Compr(N))
      EscrevaL("O seu nome escrito em letras maiusculas é: ", Maiusc(N))
      EscrevaL("O seu nome escrito em letras minusculas é: ", Minusc(N))
      EscrevaL("A primeira letra do seu nome é: ", Copia(N, 1, 1))
      EscrevaL("A última letra do seu nome é: ", Copia(Maiusc(N),Compr(N), 1))
      EscrevaL("O codigo da letra A é ", Asc("A"))
      EscrevaL("A letra de código 67 é", Carac(67))
      
      Para C <- Compr(N) ate 1 passo -1 faca
            Escreva(Copia(Maiusc(N), C, 1))
      FimPara
fimalgoritmo
